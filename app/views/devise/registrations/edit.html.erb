<section class="section">
<!-- <h2>Edit <%= resource_name.to_s.humanize %></h2> -->
<div class="columns is-centered">
  <div class="column is-half is-narrow">

    <p class="title has-text-centered">My Account</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email, class: "label is-large" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-large" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, class: "label is-large" %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "off", class: "input is-large" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "label is-large" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "input is-large" %>
      </div>

      <div class="field">
        <%= f.label :current_password, class: "label is-large" %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "off", class: "input is-large" %>
      </div>
      <br>

      <div class="actions has-text-centered">
        <%= f.submit "Update", class: "button is-link is-large is-rounded" %>
        <%= link_to "Cancel", :root , class: "button is-outlined is-large is-rounded" %>
      </div>
    <% end %>
    <br>

    <div class="actions has-text-centered">
      <%= link_to "Or, delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-large is-text is-rounded" %>
      <br>

    </div>

  </div>
</div>
</section>
